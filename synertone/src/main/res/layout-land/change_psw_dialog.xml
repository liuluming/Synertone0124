<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:alpha="1"
    android:background="@drawable/shap_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_add_password" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="旧密码:"
            android:textColor="@color/shenhui"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/prepsw"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_shap"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/qianhei"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="新密码:"
            android:textColor="@color/shenhui"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/newpsw"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_shap"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/qianhei"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="确认新密码:"
            android:textColor="@color/shenhui"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/confir_newpsw"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edittext_shap"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/qianhei"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okBtn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_shap"
            android:text="@string/comfirm"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancleBtn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_shap"
            android:text="@string/Cancel"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
