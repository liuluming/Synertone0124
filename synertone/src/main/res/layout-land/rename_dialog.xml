<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:alpha="0.95"
    android:background="@drawable/shap_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/newdevicename"
        android:textColor="@color/qianhei"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/rename_Edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_shap"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textColor="@color/qianhei"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rename_ok"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_shap"
            android:text="@string/comfirm"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/rename_cancel"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_shap"
            android:text="@string/Cancel"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
