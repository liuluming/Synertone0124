<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wan_pap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_8PX"
            android:layout_weight="1"
            android:text="PAP/CHAP用户名"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />

        <EditText
            android:id="@+id/wanset_pppoe_papname"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_weight="1"
            android:background="@drawable/fangkuang"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wan_chap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_8PX"
            android:layout_weight="1"
            android:text="PAP/CHAP密码"

            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />

        <EditText
            android:id="@+id/Wanset_pppoe_pappassword"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_weight="1"
            android:background="@drawable/fangkuang"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wan_jizhongqi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_8PX"
            android:layout_weight="1"
            android:text="接入集中器"

            android:textSize="@dimen/DIMEN_30PX" />

        <EditText
            android:id="@+id/wanset_pppoe_concentrator"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_weight="1"
            android:background="@drawable/fangkuang"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_80PX"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wan_fuwuming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_8PX"
            android:layout_weight="1"
            android:text="服务名"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />

        <EditText
            android:id="@+id/wanset_pppoe_servername"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_weight="1"
            android:background="@drawable/fangkuang"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="#CFCFCF" />

</LinearLayout>