                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate2_c2"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="120"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate2_c3"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="center"
                            android:text="150"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate2_c4"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="200"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />
                    </com.my51c.see51.widget.SegmentedGroup>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/firstChannelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1080P/720P"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/shenhui"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center|start"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/frameRate"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                    <com.my51c.see51.widget.SegmentedGroup
                        android:id="@+id/frameRateSpinner1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/frameRate1_c1"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="center"
                            android:text="30"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/frameRate1_c2"
