                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="24"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/frameRate1_c3"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="center"
                            android:text="15"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/frameRate1_c4"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />
                    </com.my51c.see51.widget.SegmentedGroup>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center|start"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/codeRate"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                    <com.my51c.see51.widget.SegmentedGroup
                        android:id="@+id/bitRateSpinner1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/bitRate1_c1"
                            style="@style/RadioButton_lager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:gravity="center"
                            android:text="500"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate1_c2"
                            style="@style/RadioButton_lager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1000"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate1_c3"
                            style="@style/RadioButton_lager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:gravity="center"
                            android:text="2000"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate1_c4"
                            style="@style/RadioButton_lager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3000"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/bitRate1_c5"
                            style="@style/RadioButton_lager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5000"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />
                    </com.my51c.see51.widget.SegmentedGroup>
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </com.my51c.see51.widget.ReboundScrollView>
</LinearLayout>