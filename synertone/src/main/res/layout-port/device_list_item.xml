<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_listview_linearlayout"
    android:descendantFocusability="blocksDescendants"
    android:gravity="left|center"
    android:paddingBottom="2dp"
    android:paddingLeft="8dp"
    android:paddingTop="2dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cam_image"
            android:layout_width="80dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/cam_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/dev_online" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dip"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cam_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSelection"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/list_selected_btn" />

    <ImageButton
        android:id="@+id/cam_imagebtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/setting_style"
        android:contentDescription="@string/deviceinfo"
        android:focusable="false"
        android:gravity="left|center_vertical" />

</LinearLayout>