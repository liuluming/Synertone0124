<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="left|center"
    android:paddingBottom="8dp"
    android:paddingLeft="2dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/rfdevicelogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="6dip"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingTop="5dip" />


    <ImageView
        android:id="@+id/cam_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="6dip"
        android:paddingBottom="5dip"
        android:paddingLeft="2dip"
        android:paddingTop="5dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rfdevicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dip"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rfdeviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/rfdevice_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/setting_focused"
        android:contentDescription="@string/deviceinfo"
        android:focusable="false"
        android:gravity="left|center_vertical" />

</LinearLayout>